{
   "compilerOptions": {
      "target": "es2018",

      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["es2018"],

      "allowSyntheticDefaultImports": true,

      "strictBindCallApply": true,	
      "noImplicitThis": true,
      "noImplicitReturns": true,

      "removeComments": true,
      "outDir": ".",
      "baseUrl": ".",
      "paths": {
         "*": ["node_modules/*"]
      }
   },

   "include": [
      "**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}
